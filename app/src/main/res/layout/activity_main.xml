<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.kartik.imagerecognizer.MainActivity">

	<TextView
		android:id="@+id/image_analysis_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:text="Image Analysis:"
		android:textAlignment="center"
		android:textSize="24sp"
		android:textStyle="bold"/>

	<Button
		android:id="@+id/objectAnalyze_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Analyze Objects"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="99dp"
		android:layout_below="@+id/image_analysis_header"
		android:layout_centerHorizontal="true"/>

	<Button
		android:id="@+id/faceAnalyze_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Analyze Faces"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="69dp"
		android:layout_below="@+id/objectAnalyze_btn"
		android:layout_centerHorizontal="true"/>

</RelativeLayout>
